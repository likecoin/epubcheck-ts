{
  "name": "@likecoin/epubcheck-ts",
  "version": "0.3.1",
  "description": "EPUB validation library for Node.js and browsers",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "epubcheck-ts": "bin/epubcheck.js"
  },
  "files": [
    "dist",
    "bin"
  ],
  "sideEffects": false,
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "generate:schemas": "npx tsx scripts/generate-schemas.ts",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "check": "biome format . && eslint . && tsc --noEmit",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "npm run build",
    "clean": "rm -rf dist coverage"
  },
  "dependencies": {
    "css-tree": "^3.0.1",
    "fflate": "^0.8.2",
    "fontoxpath": "^3.33.1",
    "libxml2-wasm": "^0.6.0",
    "slimdom": "^4.3.5",
    "slimdom-sax-parser": "^1.5.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@eslint/js": "^9.17.0",
    "@types/css-tree": "^2.3.10",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^4.0.18",
    "eslint": "^9.17.0",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.18.1",
    "vitest": "^4.0.18"
  },
  "keywords": [
    "epub",
    "epubcheck",
    "validation",
    "ebook",
    "w3c",
    "accessibility",
    "a11y"
  ],
  "author": "",
  "license": "GPL-3.0-only",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/likecoin/epubcheck-ts.git"
  },
  "bugs": {
    "url": "https://github.com/likecoin/epubcheck-ts/issues"
  },
  "homepage": "https://github.com/likecoin/epubcheck-ts#readme"
}
